@{
    ViewData["Title"] = "Add Review";
}

<h1>Add a restaurant</h1>

<form action="/reviews" method="post">
    
    <label for="resturantId">Choose a resturant</label>
    <select name="restaurantId" required>
        
        @foreach (var restaurant in Model[0].GetRestaurants())
        {
            <option value="@restaurant.RestaurantId">@restaurant.RestaurantName</option>
        }


    </select>

    <label for="reviewsRating">Rate the restaurant</label>
    <select name="reviewsRating" required>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>

    <label for="peopleId">Select your ID Number</label>
    <select name="peopleId" required>
        {
            @foreach (var people in Model.GetPeople())
            {
                <option value="@people.PeopleId">@people.PeopleName</option>
            }
        }
    </select>
    
    <button type="submit">Add Review</button>
</form>


<a href="/"><button type="submit">Back</button></a>